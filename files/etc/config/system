config system
        option hostname 'OpenWrt'
        option timezone 'UTC'
        option ttylogin '0'
        option log_size '64'
        option urandom_seed '0'

config timeserver 'ntp'
        option enabled '1'
        option enable_server '0'
        list server '0.openwrt.pool.ntp.org'
        list server '1.openwrt.pool.ntp.org'
        list server '2.openwrt.pool.ntp.org'
        list server '3.openwrt.pool.ntp.org'

config led
        option name 'system'
        option sysfs 'oolitebox:system'
        option trigger 'none'
        option default '1'

config led
        option default '0'
        option sysfs 'oolitebox:wifi1'
        option trigger 'netdev'
        option mode 'link tx rx'
        option dev 'wlan1'
        option name 'wifi1'

config led
        option default '0'
        option name 'wifi0'
        option sysfs 'oolitebox:wifi0'
        option trigger 'netdev'
        option dev 'wlan0'
        option mode 'link tx rx'

config led
        option default '0'
        option name 'lan1'
        option sysfs 'oolitebox:lan1'
        option trigger 'netdev'
        option dev 'eth1'
        option mode 'link tx rx'

config led
        option default '0'
        option name 'lan2'
        option sysfs 'oolitebox:lan2'
        option trigger 'netdev'
        option dev 'eth1'
        option mode 'link tx rx'

config led                            
        option default '0'            
        option name 'lan3'            
        option sysfs 'oolitebox:lan3' 
        option trigger 'netdev'      
        option dev 'eth1'            
        option mode 'link tx rx'     
                                     
config led                           
        option default '0'           
        option name 'lan4'           
        option sysfs 'oolitebox:lan4'
        option trigger 'netdev'      
        option dev 'eth1'            
        option mode 'link tx rx'     
                                     
config led                           
        option name 'wan'            
        option sysfs 'oolitebox:wan' 
        option default '0'           
        option trigger 'netdev'      
        option dev 'eth0'            
        option mode 'link tx rx'

